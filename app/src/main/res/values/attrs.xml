<resources>
    <declare-styleable name="BallRotationAnim">
        <!--球最大半径-->
        <attr name="max_radius" format="dimension" />
        <!--球最小半径-->
        <attr name="min_radius" format="dimension" />
        <!--第一个球颜色-->
        <attr name="one_color" format="color" />
        <!--第二个球颜色-->
        <attr name="two_color" format="color" />
        <!--两球之间间距-->
        <attr name="distance" format="dimension" />
        <!--动画执行时间-->
        <attr name="duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="AccelerateCircularView">
        <attr name="ringColor" format="color" />
        <!--大圆半径-->
        <attr name="ringWidth" format="dimension" />
        <!--小圆颜色-->
        <attr name="globuleColor" format="color" />
        <attr name="globuleRadius" format="dimension" />
        <!--旋转周期-->
        <attr name="heightPercentage" format="float" />
        <attr name="cycleTime" format="float" />
    </declare-styleable>
